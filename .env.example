# Unified PIM MCP Server Configuration

# General Settings
NODE_ENV=development
LOG_LEVEL=info

# Microsoft Graph Configuration
ENABLE_MICROSOFT=true
AZURE_CLIENT_ID=your-microsoft-client-id
AZURE_CLIENT_SECRET=your-microsoft-client-secret
AZURE_TENANT_ID=your-tenant-id
AZURE_REDIRECT_URI=http://localhost:3000/auth/callback
GRAPH_API_BASE_URL=https://graph.microsoft.com/v1.0
GRAPH_API_BETA_URL=https://graph.microsoft.com/beta

# Legacy naming (for backward compatibility)
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_TENANT_ID=your-tenant-id

# Google APIs Configuration
ENABLE_GOOGLE=true
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Apple Services Configuration
ENABLE_APPLE=true
APPLE_USERNAME=your-apple-id
APPLE_APP_PASSWORD=your-app-specific-password

# Security Configuration
ENCRYPTION_KEY=your-32-character-encryption-key-here
TOKEN_STORAGE_PATH=./secure/tokens

# Cache Configuration
CACHE_MEMORY_TTL=300000
CACHE_CHROMADB_URL=http://localhost:8000
CACHE_CHROMADB_TTL=3600000
CACHE_FILE_PATH=./cache
CACHE_FILE_TTL=1800000

# Platform Preferences
PRIMARY_PLATFORM=microsoft

# Performance Tuning
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60000
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60000

# Monitoring
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true

# Development Settings (remove in production)
DEBUG_MODE=false
MOCK_PLATFORMS=false