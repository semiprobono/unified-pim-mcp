# Azure AD Configuration - Development Environment
# Copy this file to .env.local and replace the placeholder values

# Azure AD Application Settings
AZURE_CLIENT_ID=REPLACE_WITH_YOUR_CLIENT_ID
AZURE_TENANT_ID=REPLACE_WITH_YOUR_TENANT_ID
AZURE_AUTHORITY=https://login.microsoftonline.com/REPLACE_WITH_YOUR_TENANT_ID
AZURE_REDIRECT_URI=http://localhost:8080/auth/callback

# Optional: Azure Client Secret (only needed for confidential client scenarios)
# AZURE_CLIENT_SECRET=your-client-secret-here

# ChromaDB Configuration
CHROMADB_HOST=localhost
CHROMADB_PORT=8000

# Application Configuration
NODE_ENV=development
LOG_LEVEL=debug

# MCP Server Configuration
MCP_SERVER_PORT=8080
MCP_SERVER_HOST=localhost

# Security Configuration
ENCRYPTION_KEY=generate-a-secure-32-character-key-here
JWT_SECRET=generate-a-secure-jwt-secret-here

# Platform Configuration
ACTIVE_PLATFORMS=microsoft
DEFAULT_CACHE_TTL=300

# Performance Configuration
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=30000